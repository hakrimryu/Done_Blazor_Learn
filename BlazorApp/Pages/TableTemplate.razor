@using BlazorApp.Data;

<!-- TData -->
@typeparam TItem

<h3>TableTemplate</h3>

<table class="table">
    <thead>
        <tr>
            @this.Top
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                @Row(item)
            </tr>
        }
    </tbody>
</table>

@code {

    /// <summary>
    /// テーブル上段
    /// </summary>
    [Parameter]
    public RenderFragment Top { get; set; }

    /// <summary>
    /// テーブルの内容
    /// </summary>
    [Parameter]
    public RenderFragment<TItem> Row { get; set; }

    /// <summary>
    /// TData List
    /// </summary>
    [Parameter]
    public IReadOnlyList<TItem> Items { get; set; }

}
